{
  "name": "ai-spine-tools-sdk",
  "version": "1.2.5",
  "description": "SDK for building AI Spine compatible tools",
  "private": true,
  "workspaces": [
    "packages/*",
    "templates/*",
    "examples/*"
  ],
  "scripts": {
    "bootstrap": "npm install && npm run build",
    "build": "node scripts/monorepo-manager.js build",
    "build:sequential": "node scripts/monorepo-manager.js build --sequential",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "build:analyze": "cross-env ANALYZE=true npm run build",
    "dev": "npm run dev --workspaces",
    "test": "node scripts/test-coordinator.js run",
    "test:sequential": "node scripts/test-coordinator.js run --sequential",
    "test:coverage": "node scripts/test-coordinator.js run --coverage",
    "test:watch": "node scripts/test-coordinator.js watch",
    "test:overview": "node scripts/test-coordinator.js overview",
    "test:templates": "npm run test:templates --workspace=@ai-spine/tools-testing",
    "test:examples": "npm run test:examples --workspace=@ai-spine/tools-testing",
    "test:scripts": "cd scripts && npm test",
    "test:scripts:coverage": "cd scripts && npm run test:coverage",
    "test:release": "cd scripts && npm test -- --testPathPattern=release-automation.test.js",
    "lint": "eslint packages/ --ext .ts,.js",
    "clean": "npm run clean --workspaces",
    "clean:cache": "npm run clean && rm -rf node_modules/.cache",
    "bundle:size": "npm run build:prod && node scripts/bundle-size-check.js",
    "deps:analyze": "node scripts/dependency-analysis.js",
    "deps:sync": "node scripts/monorepo-manager.js sync-deps",
    "build:verify": "node scripts/build-verification.js",
    "build:verify:verbose": "node scripts/build-verification.js --verbose",
    "monorepo:status": "node scripts/monorepo-manager.js status",
    "monorepo:health": "node scripts/monorepo-manager.js health",
    "version:update": "node scripts/monorepo-manager.js version",
    "release:preview": "node scripts/release-manager.js preview",
    "release:bump": "node scripts/release-manager.js bump",
    "release:patch": "node scripts/release-manager.js release patch",
    "release:minor": "node scripts/release-manager.js release minor",
    "release:major": "node scripts/release-manager.js release major",
    "release:changelog": "node scripts/release-manager.js changelog",
    "dev:start": "node scripts/dev-workflow.js start",
    "dev:watch": "node scripts/dev-workflow.js watch",
    "dev:link": "node scripts/dev-workflow.js link",
    "dev:unlink": "node scripts/dev-workflow.js unlink",
    "dev:health": "node scripts/dev-workflow.js health",
    "dev:status": "node scripts/dev-workflow.js status",
    "prerelease": "npm run lint && npm run test && npm run build:prod && npm run build:verify && npm run bundle:size && npm run deps:analyze"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "lerna": "^8.0.0",
    "prettier": "^3.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-progress": "^1.1.0",
    "rollup-plugin-visualizer": "^5.9.0",
    "semver": "^7.6.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Dataframe-Consulting/ai-spine-tools-builder.git"
  },
  "keywords": [
    "ai-spine",
    "tools",
    "sdk",
    "framework",
    "ai-agents"
  ],
  "author": "AI Spine Team",
  "license": "MIT",
  "dependencies": {
    "chrono-node": "^2.8.4"
  }
}
