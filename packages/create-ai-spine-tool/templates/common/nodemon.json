{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": [
    "dist/**/*",
    "node_modules/**/*",
    "coverage/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts"
  ],
  "exec": "{{#isTypeScript}}tsx src/index.ts{{/isTypeScript}}{{#isJavaScript}}node src/index.js{{/isJavaScript}}",
  "env": {
    "NODE_ENV": "development",
    "AI_SPINE_VERBOSE": "true"
  },
  "restartable": "rs",
  "colours": true,
  "legacyWatch": false,
  "delay": 1000,
  "verbose": false
}